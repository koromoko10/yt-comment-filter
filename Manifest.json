{
    "manifest_version": 3,
    "name": "YouTube コメントフィルター",
    "version": "1.1.0",
    "description": "特定のパターンに合うYouTubeコメントを自動で非表示にします",
    "permissions": ["scripting", "storage"],
    "host_permissions": [
      "https://www.youtube.com/*"
    ],
    "background": {
    "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": ["https://www.youtube.com/*"],
        "js": ["content.js"]
      }
    ],
    "web_accessible_resources": [
    {
      "resources": ["fonts/LINESeedJP_OTF_Rg.woff"],
      "matches": ["<all_urls>"]
    }
  ],
    "action": {
    "default_popup": "popup.html",
    "default_title": "クリックするとコメントの非表示数を確認できます",
    "default_icon": "icons/icon.png"
    },
    "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
    "author": "koromoko10",
    "homepage_url": "https://lit.link/koromoko10/",
    "commands": {
    "_execute_action": {
      "suggested_key": {
        "windows": "Alt+Shift+Y",
        "mac": "Command+Shift+Y",
        "chromeos": "Alt+Shift+Y",
        "linux": "Alt+Shift+Y"
      }
    }
    },
    "version_name": "Beta 1.1.0<ユーザーフィルター機能追加！>"
}